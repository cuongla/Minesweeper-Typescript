  "description": "A mine sweeper game application that is built with react and typescript",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch --mode=development",
    "start": "webpack serve --mode=development",
    "test": "jest",
    "lint": "npx eslint ./ --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --fix",
    "test:mutate": "stryker run",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic",
    "prepare": "husky install",
    "slides": "reveal-md ./slides"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cuongla/Minesweeper-Typescript.git"
  },
